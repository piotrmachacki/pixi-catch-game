{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "typeRoots": ["./src/types"]
    },
    "include": ["src/**/*"]
}
